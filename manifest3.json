{
  "manifest_version": 3,
  "name": "ID Strava Heatmap Chrome Extension",
  "description": "",
  "version": "0.1",
  "permissions": [
    "cookies"
  ],
  "host_permissions": [
    "*://*.strava.com/*",
    "*://*.openstreetmap.org/*"
  ],
  "content_scripts": [
    {
      "matches": [ 
        "https://www.openstreetmap.org/id*"
      ],
      "js": [
        "browser-polyfill.min.js",
        "content.js"
      ],
      "run_at": "document_start",
      "world": "MAIN",
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "browser-polyfill.min.js",
      "background.js"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "script.js"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ]
}
