{
  "manifest_version": 3,
  "name": "iD Strava Heatmap",
  "description": "Easily overlay the Strava Global Heatmap in your iD editor and gain valuable insights into popular routes and activity patterns.",
  "version": "0.9.2",
  "permissions": ["cookies", "contextMenus", "declarativeNetRequest", "notifications"],
  "host_permissions": ["*://*.strava.com/*", "*://*.openstreetmap.org/*"],
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.openstreetmap.org/id*"],
      "js": ["lib/browser-polyfill.min.js", "src/content/id.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["https://www.strava.com/login*"],
      "js": ["lib/browser-polyfill.min.js", "src/content/strava-login.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.strava.com/maps/global-heatmap*"],
      "js": ["lib/browser-polyfill.min.js", "src/content/strava-maps.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/imagery.json",
        "src/client/index.js",
        "src/client/activities.js",
        "src/client/auth.js",
        "src/client/control.js",
        "src/client/colors.js",
        "src/client/panel.js",
        "src/client/section.js",
        "src/client/opacity.js",
        "src/client/settings.js",
        "src/client/tiles.js",
        "src/client/utils.js"
      ],
      "matches": ["*://*.openstreetmap.org/*"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "rules_cors",
        "enabled": true,
        "path": "rules/cors.json"
      },
      {
        "id": "rules_imagery",
        "enabled": true,
        "path": "rules/imagery.json"
      }
    ]
  },
  "homepage_url": "https://chromewebstore.google.com/detail/id-strava-heatmap/eglbcifjafncknmpmnelckombmgddlco",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "minimum_chrome_version": "88"
}
